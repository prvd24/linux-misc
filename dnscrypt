# https://github.com/DNSCrypt/dnscrypt-proxy/wiki/Installation-linux
sudo dnf install dnscrypt-proxy

sudo ss -lp 'sport = :domain'
sudo systemctl stop systemd-resolved ; sudo systemctl disable systemd-resolved

# sudo dnscrypt-proxy -config ~/.local/dnscrypt-proxy/dnscrypt-proxy.toml -check
sudo dnscrypt-proxy -config /etc/dnscrypt-proxy/dnscrypt-proxy.toml -check

sudo cp /etc/resolv.conf /etc/resolv.conf.backup
sudo rm -f /etc/resolv.conf
sudo nano /etc/resolv.conf
        nameserver 127.0.0.1
        nameserver ::1
        nameserver _<ipv6>__
        options edns0

#lock
sudo chattr +i /etc/resolv.conf
#unlock
sudo chattr -i /etc/resolv.conf

sudo systemctl status dnscrypt-proxy.service ; sudo systemctl enable dnscrypt-proxy.service


sudo nano /etc/cron.daily/dnscrypt.sh
        #!/bin/bash
        cd /home/prvd/.local/dnscrypt-proxy/ && python generate-domains-blocklist.py > blocked-names.txt
